<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:id="@+id/tvIDHoaDonHT"
        ></TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/tvIDHoaDonHT"
        android:id="@+id/tvIDBanHT"
        ></TextView>
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"

        android:fontFamily="monospace"
        android:textColor="#000000"

        android:layout_toRightOf="@id/tvIDBanHT"
        android:id="@+id/tvNgayLapHT"
        ></TextView>
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"

        android:fontFamily="monospace"
        android:textColor="#000000"
        android:id="@+id/tvTongTienHT"
        android:layout_toRightOf="@+id/tvNgayLapHT"
        ></TextView>
</RelativeLayout>
