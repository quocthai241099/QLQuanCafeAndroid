<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57EFE2"
    android:orientation="vertical"
    tools:context=".DangKyActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDangKy"
        android:text="NGƯỜI DÙNG"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:textColor="#E10707"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvDangKy"
        android:id="@+id/edtHoTen"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@mipmap/hoten"
        android:fontFamily="monospace"
        android:hint="Họ tên"
        ></EditText>
    <EditText
        android:layout_below="@id/edtHoTen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtUserDK"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@mipmap/user"
        android:hint="Username"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtPassDK"
        android:layout_below="@+id/edtUserDK"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@mipmap/password"
        android:hint="Password"
        android:fontFamily="monospace"
        android:password="true"
        ></EditText>
    <EditText
        android:layout_below="@id/edtPassDK"
        android:password="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtConfirmPass"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@mipmap/password"
        android:fontFamily="monospace"
        android:hint="Confirm Password"
        ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="PHÂN QUYỀN"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#E10707"
        android:id="@+id/tvPhanQuyen"
        android:layout_below="@id/edtConfirmPass"
        android:layout_marginTop="10dp"
        ></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radPhanQuyen"
        android:layout_below="@id/tvPhanQuyen"
        android:orientation="horizontal"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radAdmin"
            android:text="Admin"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            android:fontFamily="monospace"
            android:checked="true"
            ></RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radBanHang"
            android:text="Bán hàng"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:layout_marginLeft="140dp"
            ></RadioButton>
    </RadioGroup>

    <Button
        android:layout_below="@id/radPhanQuyen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnDangKyDK"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="monospace"
        android:text="Đăng ký"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btnDangKyDK"
        android:id="@+id/btnThoatDK"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:text="Cancel"
        android:fontFamily="monospace"
        ></Button>
</RelativeLayout>