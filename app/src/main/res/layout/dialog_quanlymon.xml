<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F2FBE6"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="QUẢN LÝ MÓN"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:paddingTop="10dp"
        android:background="#FFFFFF"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:id="@+id/tvQuanLyMon"
        ></TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvQuanLyMon"
        android:text="Sửa thông tin món"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:background="#F2FBE6"
        android:id="@+id/btnSuaThongTinMon"
        ></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Xóa"
        android:layout_below="@+id/btnSuaThongTinMon"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:id="@+id/btnXoaThongTinMon"
        android:background="#F2FBE6"
        android:layout_marginTop="10dp"
        ></Button>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnXoaThongTinMon"
        android:layout_centerHorizontal="true"
        android:text="Hủy"
        android:fontFamily="monospace"
        android:background="#F2FBE6"
        android:id="@+id/btnHuyQuanLyMon"
        android:layout_marginTop="10dp"
        ></Button>
</RelativeLayout>
