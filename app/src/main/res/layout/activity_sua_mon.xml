<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaMonActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Tên món"
        android:id="@+id/tenMon"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tên món"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:id="@+id/edtTenMonSua"
        android:layout_below="@id/tenMon"
        ></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Giá bán"
        android:id="@+id/giaBan"
        android:layout_below="@id/edtTenMonSua"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá bán"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:layout_below="@+id/giaBan"
        android:id="@+id/edtGiaBanSua"
        ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:layout_below="@id/edtGiaBanSua"
        android:id="@+id/tvNhomMonSua"
        android:textSize="20dp"
        ></TextView>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Đồng ý"
        android:layout_below="@id/tvNhomMonSua"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:id="@+id/btnSuaMon"
        ></Button>
</RelativeLayout>