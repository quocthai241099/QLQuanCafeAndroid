<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NguoiDungActivity">
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:text="Họ tên"

        android:paddingTop="10dp"
        android:textColor="#000000"
        android:id="@+id/tvHoTen"
        ></TextView>
    <TextView
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:text="User name"

        android:paddingTop="10dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/tvHoTen"
        android:id="@+id/tvUserNguoiDung"
        ></TextView>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:text="Phân quyền"

        android:paddingTop="10dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/tvUserNguoiDung"
        android:id="@+id/tvNguoiDungPhanQuyen"
        ></TextView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHoTen"
        android:id="@+id/lvNguoiDung"
        ></ListView>
</RelativeLayout>