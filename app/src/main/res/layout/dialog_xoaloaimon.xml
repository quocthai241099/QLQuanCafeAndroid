<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Xóa loại món"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:id="@+id/tieuDeXoaLoaiMon"
        ></Button>
    <TextView
        android:layout_below="@id/tieuDeXoaLoaiMon"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:id="@+id/tvTenLoaiMonXoa"
        android:textColor="#000000"
        android:textAlignment="center"
        ></TextView>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvTenLoaiMonXoa"
        android:text="Xóa"
        android:fontFamily="monospace"
        android:id="@+id/btnLuuXoaLoaiMon"
        ></Button>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvTenLoaiMonXoa"
        android:layout_alignParentRight="true"
        android:text="Hủy"
        android:fontFamily="monospace"
        android:id="@+id/btnHuyXoaLoaiMon"
        ></Button>

</RelativeLayout>
